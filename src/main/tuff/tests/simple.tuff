// Simple assertion framework for Tuff

fn assertEqual(expected : I32, actual : I32) : I32 => {
    if (expected == actual) {
        1
    } else {
        0
    }
};

// Tests
fn testAdd() : I32 => {
    assertEqual(5, 2 + 3)
};

fn testSub() : I32 => {
    assertEqual(1, 3 - 2)
};

fn testMul() : I32 => {
    assertEqual(6, 2 * 3)
};

// Print results
let r1 = testAdd();
let r2 = testSub();
let r3 = testMul();

print(100);
print(r1);
print(r2);
print(r3);

let passed = r1 + r2 + r3;
passed
