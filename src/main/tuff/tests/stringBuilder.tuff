extern type NativeString;

extern fn dropNativeString(this : NativeString);
type String = NativeString!dropNativeString;

extern class fn StringBuilder() => {
	extern fn appendChar(&this, char : Char) : StringBuilder;
	extern fn appendString(&this, string : Str) : StringBuilder;
	extern fn toString(this) : String;
}

