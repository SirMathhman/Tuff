{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Tuff",
  "scopeName": "source.tuff",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#characters" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#functions" },
    { "include": "#operators" },
    { "include": "#punctuation" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.tuff",
          "match": "//.*$"
        },
        {
          "name": "comment.block.tuff",
          "begin": "/\\*",
          "end": "\\*/",
          "patterns": [{ "include": "#comments" }]
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.tuff",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.tuff",
              "match": "\\\\(?:[nrt0\\\\\"']|u[0-9a-fA-F]{4})"
            }
          ]
        }
      ]
    },
    "characters": {
      "patterns": [
        {
          "name": "string.quoted.single.tuff",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.tuff",
              "match": "\\\\(?:[nrt0\\\\\"']|u[0-9a-fA-F]{4})"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.tuff",
          "match": "\\b0x[0-9a-fA-F]+(?:I8|I16|I32|I64|U8|U16|U32|U64)?\\b"
        },
        {
          "name": "constant.numeric.binary.tuff",
          "match": "\\b0b[01]+(?:I8|I16|I32|I64|U8|U16|U32|U64)?\\b"
        },
        {
          "name": "constant.numeric.float.tuff",
          "match": "\\b[0-9]+\\.[0-9]+(?:[eE][+-]?[0-9]+)?(?:F32|F64)?\\b"
        },
        {
          "name": "constant.numeric.integer.tuff",
          "match": "\\b[0-9]+(?:I8|I16|I32|I64|U8|U16|U32|U64)?\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.tuff",
          "match": "\\b(if|else|while|loop|match|break|continue|yield)\\b"
        },
        {
          "name": "keyword.declaration.tuff",
          "match": "\\b(fn|class|let|mut|struct|type|module|extern|out)\\b"
        },
        {
          "name": "keyword.import.tuff",
          "match": "\\b(from|use)\\b"
        },
        {
          "name": "constant.language.boolean.tuff",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "variable.language.tuff",
          "match": "\\b(this)\\b"
        },
        {
          "name": "variable.language.wildcard.tuff",
          "match": "\\b_\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.builtin.tuff",
          "match": "\\b(I8|I16|I32|I64|U8|U16|U32|U64|F32|F64|Bool|Char|String|Void|Never)\\b"
        },
        {
          "name": "storage.type.generic.tuff",
          "match": "\\b(Vec|Option|Result)\\b"
        },
        {
          "comment": "Type names (PascalCase identifiers)",
          "name": "entity.name.type.tuff",
          "match": "\\b[A-Z][a-zA-Z0-9]*\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "comment": "Function declaration - fn name or class fn name",
          "match": "\\b(fn|class\\s+fn)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*(<[^>]*>)?",
          "captures": {
            "1": { "name": "keyword.declaration.tuff" },
            "2": { "name": "entity.name.function.tuff" },
            "3": { "name": "entity.name.type.parameter.tuff" }
          }
        },
        {
          "comment": "out fn declaration",
          "match": "\\b(out)\\s+(fn|class\\s+fn)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*(<[^>]*>)?",
          "captures": {
            "1": { "name": "keyword.declaration.tuff" },
            "2": { "name": "keyword.declaration.tuff" },
            "3": { "name": "entity.name.function.tuff" },
            "4": { "name": "entity.name.type.parameter.tuff" }
          }
        },
        {
          "comment": "Function call with generic args",
          "match": "\\b([a-z_][a-zA-Z0-9_]*)(<[^>]+>)?\\s*\\(",
          "captures": {
            "1": { "name": "entity.name.function.call.tuff" },
            "2": { "name": "entity.name.type.parameter.tuff" }
          }
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arrow.tuff",
          "match": "=>"
        },
        {
          "name": "keyword.operator.namespace.tuff",
          "match": "::"
        },
        {
          "name": "keyword.operator.comparison.tuff",
          "match": "==|!=|<=|>="
        },
        {
          "name": "keyword.operator.logical.tuff",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.bitwise.tuff",
          "match": "&|\\||\\^|~|<<|>>"
        },
        {
          "name": "keyword.operator.assignment.tuff",
          "match": "\\+=|-=|\\*=|/=|%=|&=|\\|=|\\^=|<<=|>>=|="
        },
        {
          "name": "keyword.operator.arithmetic.tuff",
          "match": "\\+|-|\\*|/|%"
        },
        {
          "name": "keyword.operator.type.tuff",
          "match": ":"
        },
        {
          "name": "keyword.operator.is.tuff",
          "match": "\\bis\\b"
        },
        {
          "name": "keyword.operator.comparison.tuff",
          "match": "<|>"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.separator.comma.tuff",
          "match": ","
        },
        {
          "name": "punctuation.terminator.semicolon.tuff",
          "match": ";"
        },
        {
          "name": "punctuation.accessor.dot.tuff",
          "match": "\\."
        },
        {
          "name": "punctuation.section.braces.begin.tuff",
          "match": "\\{"
        },
        {
          "name": "punctuation.section.braces.end.tuff",
          "match": "\\}"
        },
        {
          "name": "punctuation.section.parens.begin.tuff",
          "match": "\\("
        },
        {
          "name": "punctuation.section.parens.end.tuff",
          "match": "\\)"
        },
        {
          "name": "punctuation.section.brackets.begin.tuff",
          "match": "\\["
        },
        {
          "name": "punctuation.section.brackets.end.tuff",
          "match": "\\]"
        },
        {
          "name": "punctuation.section.angle.begin.tuff",
          "match": "<"
        },
        {
          "name": "punctuation.section.angle.end.tuff",
          "match": ">"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "comment": "Module path segment before ::",
          "match": "\\b([A-Z][a-zA-Z0-9_]*)\\s*(::)",
          "captures": {
            "1": { "name": "entity.name.namespace.tuff" },
            "2": { "name": "keyword.operator.namespace.tuff" }
          }
        },
        {
          "comment": "Field access after dot (muted)",
          "match": "\\.\\s*([a-z_][a-zA-Z0-9_]*)\\b(?!\\s*\\()",
          "captures": {
            "1": { "name": "variable.other.property.tuff" }
          }
        },
        {
          "comment": "Generic identifiers",
          "name": "variable.other.tuff",
          "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
