<?xml version="1.0"?>
<!DOCTYPE module PUBLIC "-//Puppy Crawl//DTD Checkstyle Configuration 1.3//EN" "https://checkstyle.org/dtds/configuration_1_3.dtd">
<module name="Checker">
	<!-- Enforce file length <= 500 lines -->
	<module name="FileLength">
		<property name="max" value="500" />
	</module>
	<!-- Enforce cyclomatic complexity <= 15 for all methods and constructors -->
	<module name="TreeWalker">
		<module name="CyclomaticComplexity">
			<property name="max" value="15" />
		</module>
	</module>
	<!-- Keep file-level checks empty otherwise; add additional checks as desired. -->
</module>