{
  "name": "tuff",
  "version": "0.1.0",
  "description": "The Tuff Programming Language Compiler",
  "main": "dist/index.js",
  "bin": {
    "tuff": "./dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --silent --reporters jest-silent-reporter",
    "start": "node dist/index.js",
    "lint": "eslint . --quiet",
    "cpd": "jscpd src",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "jest": "^29.5.0",
    "jest-silent-reporter": "^0.6.0",
    "jscpd": "^4.0.5",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.0",
    "typescript-eslint": "^8.51.0"
  }
}
