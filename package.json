{
  "name": "tuff",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "cpd": "pmd cpd --minimum-tokens 45 --ignore-literals --ignore-identifiers src tests --language typescript",
    "lint": "eslint --ext .ts src tests",
    "test": "vitest --run",
    "check": "npm run test && npm run cpd && npm run lint",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "eslint": "^9.39.2",
    "husky": "^8.0.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
