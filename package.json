{
  "name": "tuff",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "vitest run --reporter dot --silent",
    "test:verbose": "cross-env TUFF_TEST_VERBOSE=1 vitest run --reporter verbose --no-silent",
    "check": "npm run test",
    "lint": "tsx tools/tuff_lint.ts",
    "lint:timeout": "tsx tools/tuff_lint_timeout.ts",
    "lint:staged": "tsx tools/tuff_lint_staged.ts",
    "bench:clones": "tsx tools/bench_clone_detection.ts",
    "check:bootstrap": "npm test && npm run build:selfhost-prebuilt",
    "check:prebuilt": "npm run build:selfhost-prebuilt && git diff --exit-code selfhost/prebuilt",
    "build:selfhost-prebuilt": "tsx tools/build_prebuilt_selfhost.ts",
    "tuff:repl": "tsx tools/tuff_repl.ts",
    "tuff:refactor": "tsx tools/tuff_refactor.ts",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "cross-env": "^7.0.3",
    "husky": "^9.0.11",
    "typescript": "^5.8.2",
    "tsx": "^4.19.2",
    "vitest": "^2.1.8"
  }
}
