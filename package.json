{
  "name": "tuff-interpreter",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "build": "tsc -p .",
    "lint": "eslint . --ext .ts",
    "cpd": "pmd cpd -d src,tests --minimum-tokens 50 --language typescript --format text --ignore-identifiers --ignore-literals",
    "check-dir-files": "python scripts/check_dir_file_count.py .",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "eslint": "^9.39.2",
    "eslint-plugin-sonarjs": "^3.0.5",
    "husky": "^8.0.3",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
