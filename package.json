{
  "name": "tuff-run",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "cpd": "pmd cpd --minimum-tokens 45 --language typescript --format text --ignore-literals --ignore-identifiers src tests",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "npm run test"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jest": "^29.5.3",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "jest": "^29.6.1",
    "lint-staged": "^16.2.7",
    "ts-jest": "^29.1.0",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.52.0"
  }
}
