{
  "env": {
    "node": true,
    "es2020": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-new-func": "error",
    "no-eval": "error",
    "no-restricted-syntax": [
      "error",
      {
        "selector": "Literal[value=null]",
        "message": "Using null is banned â€” prefer undefined or explicit types."
      }
    ]
  }
}
